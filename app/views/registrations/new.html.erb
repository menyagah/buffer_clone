<h1>Sign Up</h1>
<%= form_with model: @user, url: sign_up_path, local:true  do |form| %>
  <div class="mb-3">
    <%= form.label :email%>
    <%= form.text_field :email, placeholder:"user@host.com", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :password%>
    <%= form.password_field :password, placeholder:"password", class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation%>
    <%= form.password_field :password_confirmation, placeholder:"password confirmation", class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign Up", data:{turbo:false}, class: "btn btn-primary"%>
  </div>
<% end %>
